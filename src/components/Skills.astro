---
const skills = {
    Frontend: [
        'React',
        'TypeScript',
        'Vite',
        'Leaflet',
        'Astro',
        'Tailwind CSS',
    ],
    Backend: ['Hono', 'Cloudflare Workers', 'Python', 'Cloudflare D1'],
    Infrastructure: ['Cloudflare R2', 'Cloudflare Pages'],
    DevTools: ['pnpm', 'Git', 'GitHub', 'Biome'],
};
---

<section id="skills">
    <div class="max-w-5xl mx-auto">
        <h2 class="text-3xl font-bold text-center mb-12">Skills</h2>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
            {
                Object.entries(skills).map(([category, items]) => (
                    <div class="skill-category">
                        <h3 class="text-lg font-semibold text-blue-600 border-b-2 border-blue-200 pb-2 mb-4">
                            {category}
                        </h3>
                        <ul class="space-y-2">
                            {items.map((skill) => (
                                <li class="text-slate-700">{skill}</li>
                            ))}
                        </ul>
                    </div>
                ))
            }
        </div>
    </div>
</section>
